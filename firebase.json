{
  "hosting": {
    "public": "app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "name": "functions",
      "host": "localhost",
      "port": 5001
    },
    "hosting": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "functions": [
    {
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install"
      ],
      "source": "functions/api-router",
      "codebase": "api-router",
      "runtime": "nodejs18"
    },
    {
    "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install"
      ],
      "source": "functions/generate-thumbnail",
      "codebase": "generate-thumbnail",
      "runtime": "nodejs18"
    }
  ],
  "database": {
    "rules": "database/database.rules.json"
  }
}